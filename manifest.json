{
  "vendor": "vtex",
  "name": "cross-device-cart",
  "version": "2.0.1",
  "title": "Cross device cart",
  "description": "Seamlessly allow a client to retrieve items left on a different device's cart",
  "builders": {
    "admin": "0.x",
    "react": "3.x",
    "docs": "0.x",
    "store": "0.x",
    "node": "6.x",
    "graphql": "1.x",
    "messages": "1.x"
  },
  "dependencies": {
    "vtex.session-client": "1.x",
    "vtex.styleguide": "9.x",
    "vtex.css-handles": "0.x",
    "vtex.render-runtime": "7.x",
    "vtex.checkout-graphql": "0.x",
    "vtex.device-detector": "0.x",
    "vtex.order-manager": "0.x",
    "vtex.pixel-manager": "1.x"
  },
  "registries": [
    "smartcheckout"
  ],
  "credentialType": "absolute",
  "policies": [
    {
      "name": "vbase-read-write"
    },
    {
      "name": "OMSViewer"
    },
    {
      "name": "graphql-query"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.myvtex.com",
        "path": "/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.vtexcommercestable.com.br",
        "path": "/api/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "/api/checkout/pub/*"
      }
    }
  ],
  "billingOptions": {
    "support": {
      "url": "https://support.vtex.com/hc/requests"
    },
    "type": "free",
    "availableCountries": [
      "*"
    ]
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
